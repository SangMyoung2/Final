<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.boot.mapper.MeetMapperYj">

<select id="getAllCategories" resultType="com.spring.boot.dto.MeetDTOYj">
    select * from MEET_CATEGORY order by meet_ctgnum asc
</select>

<select id="getLists" parameterType="hashMap" resultType="com.spring.boot.dto.MeetDTOYj">
	SELECT
    m.meet_listnum,
    m.meet_ctgnum,
    c.meet_ctgname,
    m.meet_master,
    m.meet_title,
    m.meet_content,
    m.meet_place,
    m.meet_memcnt,
    m.meet_max_memcnt,
    m.meet_hitcount,
    m.meet_like,
    m.meet_date,
    m.meet_list_image
FROM
    MEET m
INNER JOIN
    MEET_CATEGORY c ON m.meet_ctgnum = c.meet_ctgnum
</select>

<select id="getReview" parameterType="hashMap" resultType="com.spring.boot.dto.MeetDTOYj">
    select * from MEET_REVIEW
</select>

